generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model MedicineDetails {
  id           BigInt    @id @default(autoincrement())
  brand_name   String?
  company_name String?
  created_at   DateTime?
  dosage_form  String?
  formula      String?
  formulation  String?
  is_public    Boolean   @default(false)
  milligrams   String?
  mrp          Decimal?
  pack_size    String?
  reg_no       String?
  remarks      String?
  updated_at   DateTime?
  updated_by   String?

  @@map("medicine_details")
}

model User {
  id         BigInt    @id @default(autoincrement())
  address    String?
  created_at DateTime?
  details    String?
  is_public  Boolean   @default(false)
  mobile_no  String?
  name       String?
  password   String?
  type       String?
  updated_at DateTime?
  username   String?

  @@map("user")
}
